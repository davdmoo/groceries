<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/focus.css">
    <title>Login Form</title>
  </head>
  <body>

    <%if(err) {%>
      <div class="container text-center mt-3">
        <div class="alert alert-danger rounded mx-auto" role="alert" style="width:60%">
          <%=err%>
        </div>
      </div>
    <%}%>
    
    <div class="container text-center d-flex flex-column justify-content-center" style="height: 100vh;">
      <div class="cotainer border mx-auto p-5 rounded shadow-sm" style="width: 40%;">
        <img src="https://i.ibb.co/TWDqLmV/logo.png" alt="" width="220px" height="60px" class="mb-3">
        
        <form action="/login" class="mx-auto" method="POST">
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
            <label for="floatingInput" class="text-muted">Email address</label>
          </div>
          <div class="form-floating mb-4">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
            <label for="floatingPassword" class="text-muted">Password</label>
          </div>
          <a href="/login">
            <button type="submit" class="btn btn-success mb-5">Submit</button>
          </a>
          <p>Don't have an account? <a href="/register" class="text-success text-decoration-none fw-bold">Register</a></p>
        </form>
      </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>