<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
      <div class="container">
          <header class="d-flex align-items-center justify-content-between">
              <h1 class="my-5">Hello, Admin David</h1>
              <div class="butoons">
                <button type="button" class="btn btn-success">Add New Item</button>
                  <button type="button" class="btn btn-secondary">Out of Stock Items</button>
                  <button type="button" class="btn btn-warning">Users</button>
              </div>
          </header>

          <section class="d-flex align-items-center gap-3">
            <h5 class="fw-normal">Sort by:</h5>
            <form action="" class="d-flex">
                <select class="form-select" aria-label="Default select example">
                    <option selected disabled text-muted>Select sorting type...</option>
                    <option value="1">Name</option>
                    <option value="2">Stock</option>
                    <option value="3">Sold</option>
                    <option value="3">Category</option>
                  </select>
                  <button type="submit" class="btn btn-success ms-3">Sort</button>
            </form>
          </section>

          <main>
            <table class="table caption-top table-bordered">
                <caption>List of items</caption>
                <thead class="table-success">
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Sold</th>
                    <th scope="col">Category</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">1</th>
                    <td>Kinderjoy</td>
                    <td>10</td>
                    <td>100</td>
                    <td>Kid</td>
                    <td><a href=""> <button class="btn btn-success ms-3">Edit</button></a></td>
                  </tr>
                </tbody>
              </table>
          </main>
      </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>